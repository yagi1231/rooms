    
    <header> <h3　class="header">登録ルーム一覧表</header>
    <% if flash.notice %>
      <p class="notice"><%= flash.notice %></p>
    <% end %>
  <table>
      <thead>
        <tr>
          <th>ルーム画像</th>
          <th>ルーム名</th>
          <th>ルーム紹介</th>
          <th>料金</th>
          <th>作成日</th>
          <th>参照</th>
          <th>編集</th>
          <th>削除</th>
        </tr>
      </thead>

      <tbody>
        <% @posts.each do |post| %>
          <tr>
       
                 <td><img src="<%= "/post_images/#{post.image_name}" %>"></td>
            <td><%= post.room %></td>
            <td><%= post.introduce %></td>
            <td><%= post.fee %></td>
          　 <td><%= post.address %></td>
            <td><%= post.created_at.to_s(:datetime_jp) %></td>
            <td>
              <%= link_to "参照", post %>
            </td>
            <td>
              <%= link_to "編集", [:edit, post] %>
            </td>
            <td>
              <%= link_to "削除", post, method: :delete, data: { confirm: "本当に削除しますか？" } %>
            </td>
          </tr>
        <% end %>
        
         
             
      </tbody>
    </table>
    <p　class="newuser"><%= link_to "新規登録", :new_post %></p>
   
 

  


    